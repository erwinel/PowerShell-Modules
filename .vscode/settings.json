{
    "files.associations": {
        "*.ps1": "powershell",
        "*.psm1": "powershell",
        "*.psd1": "powershell"
    },
    "todohighlight.keywords": [
        {
            "text": "TODO:",
            "color": "white",
            "backgroundColor": "SaddleBrown",
            "overviewRulerColor": "rgba(240,98,146,0.8)",
            "diagnosticSeverity": "warning"
        },
        {
            "text": "@todo",
            "color": "white",
            "backgroundColor": "SaddleBrown",
            "overviewRulerColor": "rgba(240,98,146,0.8)",
            "diagnosticSeverity": "warning"
        },
        {
            "text": "FIXME:",
            "color": "white",
            "backgroundColor": "FireBrick",
            "overviewRulerColor": "rgba(255,189,42,0.8)",
            "diagnosticSeverity": "error"
        },
        {
            "text": "Obsolete",
            "color": "Blue",
            "backgroundColor": "Yellow",
            "overviewRulerColor": "Yellow",
            "diagnosticSeverity": "warning",
            "regex": {
                "pattern": "Obsolete(?=[\\(\\]])"
            }
        },
        {
            "text": "@deprecated",
            "color": "Blue",
            "backgroundColor": "Yellow",
            "overviewRulerColor": "Yellow",
            "diagnosticSeverity": "warning"
        },
        {
            "text": "INFO:",
            "color": "White",
            "backgroundColor": "Green",
            "border": "none",
            "diagnosticSeverity": "information",
            "isWholeLine": false
        },
        {
            "text": "BUG:", 
            "before": {
				"contentText": "⚠️" // adds text before the highlight
			}, 
            "after": {
				"contentText": "⚠️" // adds text after the highlight
			},
            "color": "red",
            "border": "1px solid red",
            "borderRadius": "2px",
            "backgroundColor": "rgba(0,0,0,.2)",
            "diagnosticSeverity": "error"
        },
        {
            "text": "NOTE:",
            "color": "white",
            "backgroundColor": "DarkSlateGray",
            "overviewRulerColor": "DarkSlateGray",
            "regex": {
                "pattern": "(?<=^|\"|\\s)NOTE[:]?(?!\\w)"
            },
            "isWholeLine": false,
            "diagnosticSeverity": "information"
        }
    ],
    "terminal.integrated.env.linux": {
        "VSCodeNeedsWideBuffer": "true"
    },
    "terminal.integrated.env.osx": {
        "VSCodeNeedsWideBuffer": "true"
    },
    "terminal.integrated.env.windows": {
        "VSCodeNeedsWideBuffer": "true"
    },
    "powershell.scriptAnalysis.enable": true,
    "powershell.debugging.createTemporaryIntegratedConsole": true,
    "powershell.developer.editorServicesLogLevel": "Diagnostic",
    "omnisharp.loggingLevel": "trace",
    "xml.fileAssociations": [
        {
            "systemId": "https://raw.githubusercontent.com/PowerShell/PowerShell/master/src/Schemas/Format.xsd",
            "pattern": "**/*.Format.ps1xml"
        },
        {
            "systemId": "https://raw.githubusercontent.com/PowerShell/PowerShell/master/src/Schemas/Types.xsd",
            "pattern": "**/*.Types.ps1xml"
        }
    ],
    "auto-close-tag.disableOnLanguage": [
        "csharp", "powershell", "json", "javascript", "markdown"
    ],
    "explorer.copyRelativePathSeparator": "/",
    "dotnet-test-explorer.testProjectPath":"**/*.sln",
    "dotnet.defaultSolution": "src/PowerShellModules.sln"
}