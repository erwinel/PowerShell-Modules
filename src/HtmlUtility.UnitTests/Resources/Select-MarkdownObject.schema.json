{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://github.com/erwinel/PowerShell-Modules/blob/master/src/HtmlUtility.UnitTests/Helpers/Select-MarkdownObject.schema.json",
    "type": "object",
    "properties":{
        "ParameterSets": {
            "type": "object",
            "properties": {
                "DepthRange": {
                    "type": "array",
                    "items": [
                        {
                            "allOf": [
                                {
                                    "type": "object",
                                    "properties": {
                                        "MatchableTypeCount": { "$ref": "#/$defs/MatchableTypeCount" },
                                        "TypeContainsHtmlAttributes": { "type": "boolean" },
                                        "TypeContainsAny": { "type": "boolean" },
                                        "IncludeAttributes": { "type": "boolean" }
                                    },
                                    "required": ["MatchableTypeCount", "IncludeAttributes"]
                                }, {
                                    "$ref": "#/$defs/RangeOptions"
                                }, {
                                    "$ref": "#/$defs/ParameterMetaData"
                                }
                            ]
                        }
                    ]
                },
                "ExplicitDepth": {
                    "type": "array",
                    "items": [
                        {
                            "allOf": [
                                {
                                    "type": "object",
                                    "properties": {
                                        "MatchableTypeCount": { "$ref": "#/$defs/MatchableTypeCount" },
                                        "Depth": { "type": "integer", "minimum": 0, "maximum": 2 },
                                        "TypeContainsHtmlAttributes": { "type": "boolean" },
                                        "TypeContainsAny": { "type": "boolean" },
                                        "IncludeAttributes": { "type": "boolean", "default": false }
                                    },
                                    "required": ["MatchableTypeCount", "Depth", "IncludeAttributes"]
                                }, {
                                    "$ref": "#/$defs/ParameterMetaData"
                                }
                            ]
                        }
                    ]
                },
                "Recurse": {
                    "type": "array",
                    "items": [
                        {
                            "allOf": [
                                {
                                    "type": "object",
                                    "properties": {
                                        "MatchableTypeCount": { "$ref": "#/$defs/MatchableTypeCount" },
                                        "TypeContainsHtmlAttributes": { "type": "boolean" },
                                        "TypeContainsAny": { "type": "boolean" },
                                        "IncludeAttributes": { "type": "boolean", "default": false }
                                    },
                                    "required": ["MatchableTypeCount", "IncludeAttributes"]
                                }, {
                                    "$ref": "#/$defs/ParameterMetaData"
                                }
                            ]
                        }
                    ]
                },
                "RecurseUnmatched": {
                    "type": "array",
                    "items": [
                        {
                            "allOf": [
                                {
                                    "oneOf": [
                                        {
                                            "type": "object",
                                            "properties": {
                                                "MatchableTypeCount": { "type": "integer", "minimum": 1, "maximum": 2 },
                                                "TypeContainsHtmlAttributes": { "type": "boolean" },
                                                "TypeContainsAny": { "type": "boolean" }
                                            },
                                            "required": ["MatchableTypeCount"]
                                        }, {
                                            "type": "object",
                                            "properties": {
                                                "MatchableTypeCount": { "const": 0 },
                                                "TypeContainsHtmlAttributes": { "const": true },
                                                "TypeContainsAny": { "type": "boolean" }
                                            },
                                            "required": ["MatchableTypeCount"]
                                        }, {
                                            "type": "object",
                                            "properties": {
                                                "MatchableTypeCount": { "const": 0 },
                                                "TypeContainsHtmlAttributes": { "type": "boolean" },
                                                "TypeContainsAny": { "const": true }
                                            },
                                            "required": ["MatchableTypeCount"]
                                        }
                                    ]
                                }, {
                                    "$ref": "#/$defs/RangeOptions"
                                }, {
                                    "$ref": "#/$defs/ParameterMetaData"
                                }
                            ]
                        }
                    ]
                }
            },
            "required": ["DepthRange", "ExplicitDepth", "Recurse", "RecurseUnmatched"]
        },
        "InputObjectProcessors": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "Name": { "type": "string" },
                    "Description": { "type": "string" }
                },
                "required": ["Name"]
            }
        }
    },
    "required": ["ParameterSets", "InputObjectProcessors"],
    "$defs": {
        "MatchableTypeCount": { "type": "integer", "minimum": 0, "maximum": 2 },
        "RangeOptions": {
            "oneOf": [
                {
                    "type": "object",
                    "properties": {
                        "MinDepth": {
                            "oneOf": [
                                { "type": "null" },
                                { "const": 0 }
                            ]
                        },
                        "MaxDepth": {
                            "oneOf": [
                                { "type": "null" },
                                { "type": "integer", "minimum": 0, "maximum": 2 }
                            ]
                        }
                    },
                    "required": ["MinDepth", "MaxDepth"]
                }, {
                    "type": "object",
                    "properties": {
                        "MinDepth": { "const": 1 },
                        "MaxDepth": {
                            "oneOf": [
                                { "type": "null" },
                                { "type": "integer", "minimum": 1, "maximum": 2 }
                            ]
                        }
                    },
                    "required": ["MinDepth", "MaxDepth"]
                }, {
                    "type": "object",
                    "properties": {
                        "MinDepth": { "const": 2 },
                        "MaxDepth": {
                            "oneOf": [
                                { "type": "null" },
                                { "type": "integer", "minimum": 2, "maximum": 3 }
                            ]
                        }
                    },
                    "required": ["MinDepth", "MaxDepth"]
                }
            ]
        },
        "ParameterMetaData": {
            "type": "object",
            "properties": {
                "Type": {
                    "oneOf": [
                        { "type": "null" },
                        {
                            "enum": [
                                "`Block`",
                                "`HtmlAttributes`",
                                "`Any`",
                                "`Block`, `Inline`",
                                "`Block`, `HtmlAttributes`",
                                "`Block`, `Any`",
                                "`HtmlAttributes`, `Any`",
                                "`Block`, `Inline`, `HtmlAttributes`",
                                "`Block`, `Inline`, `Any`",
                                "`Block`, `HtmlAttributes`, `Any`",
                                "`Block`, `Inline`, `HtmlAttributes`, `Any`"
                            ]
                        }
                    ]
                },
                "EffectiveMinDepth": { "type": "integer" },
                "EffectiveMaxDepth": {
                    "anyOf": [
                        { "type": "null" },
                        { "type": "integer" }
                    ]
                },
                "WriteHtmlAttributes": { "type": "boolean" },
                "IsRecursive": { "type": "boolean" },
                "NoRecursionOnMatch": { "type": "boolean" },
                "InputObjectProcessor": {
                    "type": "object",
                    "properties": {
                        "Name": { "type": "string" },
                        "IsPrimary": { "type": "boolean" }
                    }
                }
            },
            "required": ["EffectiveMinDepth", "EffectiveMaxDepth", "IsRecursive", "Type", "WriteHtmlAttributes", "InputObjectProcessor"]
        }
    }
}